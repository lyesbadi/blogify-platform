                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/media/user/{{userId}}?limit=20",
              "host": ["{{baseUrl}}"],
              "path": ["media", "user", "{{userId}}"],
              "query": [
                {
                  "key": "limit",
                  "value": "20"
                }
              ]
            }
          }
        }
      ]
    },
    {
      "name": "Comments",
      "item": [
        {
          "name": "Create Comment",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"content\": \"Great article! Very informative.\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/posts/{{postId}}/comments",
              "host": ["{{baseUrl}}"],
              "path": ["posts", "{{postId}}", "comments"]
            }
          }
        },
        {
          "name": "Get Comments",
          "request": {
            "method": "GET",
            "header": [],
