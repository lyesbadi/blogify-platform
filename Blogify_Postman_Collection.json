              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"status\": \"approved\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/comments/:commentId/moderate",
              "host": ["{{baseUrl}}"],
              "path": ["comments", ":commentId", "moderate"],
              "variable": [
                {
                  "key": "commentId",
                  "value": "your-comment-id-here"
                }
              ]
            }
          }
        }
      ]
    }
  ]
}
